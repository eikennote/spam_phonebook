<!DOCTYPE html>
<html>
  <head>
    <title>SpamPhoneNumberApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <!-- ナビゲーションバー -->
    <header class="navbar">
      <div class="navbar-container">
        <div class="navbar-left">
          <%= link_to "SpamPhoneNumberApp", root_path, class: "navbar-logo" %>
        </div>
        <nav class="navbar-right">
          <%= link_to "HOME", root_path, class: "nav-link" %>
          <%= link_to "PhoneNumberlist", phone_numbers_path, class: "nav-link" %>
          <% if user_signed_in? %>
            <%= link_to "LOGOUT", destroy_user_session_path,　data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" },　class: "nav-link" %>
          <% else %>
          <% end %>
        </nav>
      </div>
    </header>

    <!-- コンテンツ -->
    <main class="content">
      <%= yield %>
    </main>
  </body>
</html>